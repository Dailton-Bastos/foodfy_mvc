{% extends "_layout/default.njk" %}

{% block body %}
  {% include "../header.njk" %}

  <section class="container">
    <form
      onsubmit="Validate.apply(event)"
      action="/admin/profile/{{ session.id }}?_method=PUT"
      method="post"
      class="content-form"
    >
    {# Inputs #}
    {% include "./_form.njk" %}
      <div class="content-header">
        <h1>{{ info.content_title }}</h1>
        <div class="header-btn">
          <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
      </div>
    </form>
  </section>
{% endblock %}
