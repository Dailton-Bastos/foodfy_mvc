<div class="form-inputs-users">
  <div class="inputs">
    <div class="content">
      <label for="name">Nome</label>
      <input
        id="name"
        name="name"
        placeholder="Digite o nome completo"
        value="{{ session.name }}"
        data-user="name"
      >
      <small>Error message</small>
    </div>

    <div class="content">
      <label for="email">Email</label>
      <input
        id="email"
        name="email"
        placeholder="Digite o email"
        value="{{ session.email }}"
        data-user="email"
      >
      <small>Error message</small>
    </div>

    <div class="content">
      <label>Senha</label>
      <input
        type="password"
        name="password"
        placeholder="Digite sua senha"
        data-required

      >
      <small>Error message</small>
    </div>
  </div>
</div>
