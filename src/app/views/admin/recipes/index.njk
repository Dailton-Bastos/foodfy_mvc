{% extends "_layout/default.njk" %}

{% block body %}
  {% include "../header.njk" %}

  <section class="container">
    <div class="content-header">
      <h1>{{ info.content_title }}</h1>
      <div class="new-content">
        <a href="/admin/recipes/new" class="btn btn-primary">Nova receita</a>
      </div>
    </div>


    {% if recipes[0] %}
      <ul class="recipes-list">
        {% for recipe in recipes %}
          <li class="admin-recipe">
            <div class="img">
            {% if recipe.img %}
              <img src="{{ recipe.img }}" alt="{{ recipe.title }}" />
            {% else %}
              <img src="http://placehold.it/190x80?text=RECEITA SEM FOTO" >
            {% endif %}
            </div>

            <div class="details">
              <p>{{ recipe.title }}</p>
              <span>por {{ recipe.chef }}</span>
              <a href="/admin/recipes/{{ recipe.id }}">visualizar</a>
            </div>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <h1>Nenhuma receita encontrada</h1>
    {% endif %}

    {% if pagination.total > 1 %}
      {% include "_partials/pagination.njk" %}
    {% endif %}
  </section>
{% endblock %}
