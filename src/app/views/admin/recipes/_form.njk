  <div class="form-inputs">
    <label for="chef">Chef</label>
    <select name="chef" required>
      <option value="" selected disabled>Selecione um chef</option>

      {% for chef in chefs %}
        <option
          value="{{ chef.id }}"
          {% if recipe.chef_id === chef.id %}
            selected
          {% endif %}
        >
          {{ chef.name }}
        </option>
      {% endfor %}
    </select>

    <label for="title">Nome da receita</label>
    <input
      name="title"
      id="title"
      value="{{ recipe.title }}"
      required
    >

    <label for="recipe_image">Imagem da receita</label>
    <input
      type="url"
      id="recipe_image"
      name="image_url"
      value="{{ recipe.image_url }}"
      required
    />

    <label for="ingredients">Ingredientes</label>
      <div class="ingredients">

        {% if recipe.ingredients %}
          {% for ingredient in recipe.ingredients %}
            <div class="ingre-group" data-child>
              <input
                type="text"
                id="ingredients"
                name="ingredients[]"
                value="{{ingredient  }}"
                required
              />
              <button type="button" data-btn="remove">X</button>
            </div>
          {% endfor %}

        {% else %}
          <div class="ingre-group" data-child>
            <input type="text" id="ingredients" name="ingredients[]" required />
            <button type="button" data-btn="remove">X</button>
          </div>
        {% endif %}

      </div>
      <a href="#" data-btn="ingred">Adicionar novo ingrediente</a>

    <label for="preparation">Modo de preparo</label>
      <div class="preparation">

        {% if recipe.preparation %}
          {% for preparation in recipe.preparation %}
            <div class="prep-group" data-child>
              <input
                type="text"
                id="preparation"
                name="preparation[]"
                value="{{ preparation }}"
                required
              />
              <button type="button" data-btn="remove">X</button>
            </div>
          {% endfor %}
          {% else %}
            <div class="prep-group" data-child>
              <input type="text" id="preparation" name="preparation[]" required />
              <button type="button" data-btn="remove">X</button>
            </div>
        {% endif %}

      </div>
      <a href="#" data-btn="prep">Adicionar novo passo</a>

    <label for="information">Informações adicionais</label>
    <textarea
      id="information"
      cols="30"
      rows="10"
      name="information"
      required
      >{{ recipe.information }}</textarea>
  </div>
