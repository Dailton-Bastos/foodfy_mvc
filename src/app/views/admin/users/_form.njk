  <div class="form-inputs-users">
    <div class="inputs">
      <div class="content">
        <label for="name">Nome</label>
        <input
          id="name"
          name="name"
          placeholder="Digite o nome completo"
          {% if user %}
            value="{{ user.name }}"
          {% endif %}
        >
        <small>Error message</small>
      </div>

      <div class="content">
        <label for="email">Email</label>
        <input
          id="email"
          name="email"
          placeholder="Digite o email"
          {% if user %}
            value="{{ user.email }}"
          {% endif %}
        >
        <small>Error message</small>
      </div>
    </div>

    <div class="check">
      <label>Administrador</label>
      <input
        type="checkbox"
        name="is_admin"
        value="1"
        {% if user.is_admin === '1' %}
          checked
        {% endif %}
      >
    </div>
  </div>
