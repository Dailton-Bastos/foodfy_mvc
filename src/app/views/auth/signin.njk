{% extends "_layout/auth.njk" %}

{% block auth %}
  <form
    onsubmit="Validate.apply(event)"
    action="/signin"
    method="post"
  >

    <h1>Iniciar Sess√£o</h1>

      <div class="inputs">
        <div class="content">
          <label>Email</label>
          <input
            name="email"
            placeholder="Digite seu email"
            data-field
          >
          <small>Error message</small>
        </div>

        <div class="content">
          <label>Senha</label>
          <input
            type="password"
            name="password"
            placeholder="Digite sua senha"
            data-field
          >
          <small>Error message</small>
      </div>
    </div>

    <div class="auth-footer">
      <a href="/reset-password">Perdeu a senha?</a>

      <button type="submit" class="btn btn-primary">Acessar</button>
    </div>
  </form>
{% endblock auth %}
